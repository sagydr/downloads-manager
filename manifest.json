{
 "name": "Download Filename Controller",
 "description": "Download Filename Controller",
 "version": "0.1",
 
 "background": {
    "scripts": ["background.js"],
    "persistent": false
 },
 
 "browser_action": {
    "default_icon": {                    // optional
    "38": "logos/downloads_48.png",            // optional
    "32": "logos/downloads_32.png",
    "16": "logos/downloads_32.png",
    "48": "logos/downloads_48.png",
    "64": "logos/downloads_64.png",
    "128": "logos/downloads_128.png"

    },
    "default_title": "Your Downloads Organizer",
    "default_popup": "options.html"
  },
  
  "icons": {                   
    "48": "logos/downloads_48.png",
    "128": "logos/downloads_128.png"
  },    
 
 "options_page": "options.html",
 "permissions": ["downloads"],
 "manifest_version": 2
}
  