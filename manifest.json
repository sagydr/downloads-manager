{
 "name": "Downloads Organizer",
 "short_name": "Dnlds Orgnzr",
 "description": "A simple Download Organizer, define rules to organize downloads into your chosen folders.",
 "version": "0.1.2",
 
 "background": {
   "scripts": ["background.js"],
    "persistent": false
 },
 
 "browser_action": {
    "default_icon": {
    "38": "logos/downloads_48.png",
    "32": "logos/downloads_32.png",
    "16": "logos/downloads_16.png",
    "48": "logos/downloads_48.png",
    "64": "logos/downloads_64.png",
    "128": "logos/downloads_128.png"

    },
    "default_title": "Your Downloads Organizer",
    "default_popup": "options.html"
  },
  
  "icons": {                   
    "48": "logos/downloads_48.png",
    "128": "logos/downloads_128.png"
  },    
 
 "options_page": "options.html",
 "permissions": [
    "downloads",
    "https://www.google-analytics.com/",
    "storage"
  ],
 
 "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
 "manifest_version": 2
}